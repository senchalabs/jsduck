# For running when gem not installed
$:.unshift File.dirname(File.dirname(__FILE__)) + "/lib"

require 'jsduck/app'
require 'jsduck/options'

opts = JsDuck::Options.new
opts.parse!(ARGV)
exit_code = JsDuck::App.new(opts).run

exit exit_code
